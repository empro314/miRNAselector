{
    "esm": {
        "version": "2.5",
        "website": "https://konsta.com.pl",
        "check_updates": true,
        "auto_refresh": 5,
        "theme": "blue",
        "custom_title": "miRNAselector - server monitor"
    },
    "cpu": {
        "enable_temperature": true
    },
    "disk": {
        "show_tmpfs": false,
        "show_filesystem": true
    },
    "ping": {
        "hosts": [
            "google.com",
            "konsta.com.pl"
        ]
    },
    "last_login": {
        "enable": true,
        "max": 5
    },
    "services": {
        "show_port": true,
        "list": [
            {
                "name": "Main GUI",
                "host": "localhost",
                "port": 80,
                "protocol": "tcp"
            },
	{
                "name": "Jupyter-based editor",
                "host": "localhost",
                "port": 8888,
                "protocol": "tcp"
            }
        ]
    }
}
